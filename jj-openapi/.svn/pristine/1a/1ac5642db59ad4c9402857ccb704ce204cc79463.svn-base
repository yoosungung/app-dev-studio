<%@ page contentType="text/html; charset=utf-8" pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/layouts/shared/include/PageHeader.jspf" %>

<div id="list">
    <div class="pageHeader">
        키 발급 관리
    </div>

    <div class="pageContents">
        <!-- 검색조건 영역 시작 -->
        <div class="searchArea">
            <table class="searchBox" v-on:keyup.enter="service.readList(true);">
                <colgroup>
                    <col width="10%">
                    <col width="35%">
                    <col width="10%">
                    <col>
                    <col width="7%">
                </colgroup>
                <tr>
                    <th>상태</th>
                    <td>
                        <ui-select code-data="[KEY_STTUS]" first-name="(전체)" v-model="gridRequest.search.keySttus" class="full"></ui-select>
                    </td>
                    <th>사용기간</th>
                    <td>
                        <ui-date></ui-date> ~
                        <ui-date></ui-date>
                    </td>
                </tr>
                <tr>
                    <th>이메일</th>
                    <td>
                        <ui-input type="text" v-model="gridRequest.search.searchText"></ui-input>
                    </td>
                    <th>핸드폰</th>
                    <td>
                        <ui-input type="text" v-model="gridRequest.search.searchText"></ui-input>
                    </td>
                    <td>
                        <div class="btnArea_center">
                            <ui-button class="btn_total_search" v-on:click="service.readList(true);">조회</ui-button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <!-- 검색조건 영역 끝 -->

        <!-- 결과목록 영역 시작 -->
        <ui-grid-paging v-bind:request="gridRequest" v-bind:result="gridResult" v-bind:read-list="service.readList">
            <table class="bbs_list">
                <thead>
                    <tr>
                        <th width="160px" column-name="apiKey" column-sort>키</th>
                        <th width="" column-name="sttusNm" column-sort>상태</th>
                        <th width="" column-name="emplNo" column-sort>학/교번</th>
                        <th width="" column-name="applcntNm" column-sort>신청자</th>
                        <th width="" column-name="rqstdt" column-sort>신청일</th>
                        <th width="" column-name="emailAdres" column-sort>이메일</th>
                        <th width="" column-name="tlphonNo" column-sort>핸드폰</th>
                        <th width="" column-name="keyUsePdBegin" column-sort>사용기간</th>
                        <th width="" column-name="exmntPsnNm" column-sort>검토자</th>
                        <th width="" column-name="exmntDt" column-sort>검토일</th>
                        <th width="" column-name="keyUsePdBegin" column-sort>검토</th>
                    </tr>
                </thead>
                <tbody v-cloak>
                    <tr v-for="row in gridResult.list" v-bind:key="row.svcKeyId">
                            <td class="tal" v-if="row.sttus != 'A'">
                                <a href="javascript:void(0);" v-on:click="viewDetail(row.svcKeyId);">{{ row.apiKey }}</a>
                            </td>
                            <td class="tal" v-if="row.sttus == 'A'">
                                {{ row.apiKey }}
                            </td>

                        <td class="tac">{{ row.sttusNm }}</td>
                        <td class="tac">{{ row.emplNo }}</td>
                        <td class="tac">{{ row.applcntNm }}</td>
                        <td class="tac">{{ formatter.date(row.rqstdt) }}</td>
                        <td class="tac">{{ row.emailAdres }}</td>
                        <td class="tac">{{ row.tlphonNo }}</td>
                        <td class="tac">{{ formatter.date(row.keyUsePdBegin) }}<br>{{ formatter.date(row.keyUsePdEnd) }}</td>
                        <td class="tac">{{ row.exmntPsnNm }}</td>

                        <td class="tac">{{ formatter.date(row.exmntDt) }}</td>
                            <td class="tac" v-if="row.sttus == 'A'">
                                <ui-button class="btn_write" v-on:click="viewExamination(row.svcKeyId, 'C');">승인</ui-button>
                                <ui-button class="btn_write" v-on:click="viewExamination(row.svcKeyId, 'R');">반려</ui-button>
                            </td>
                            <td class="tac" v-if="row.sttus == 'C'">
                                <ui-button v-on:click="sendMail(row.svcKeyId);">메일 발송</ui-button>
                            </td>
                            <td class="tac" v-if="row.sttus == 'R'">
                                반려
                            </td>
                    </tr>
                </tbody>
            </table>
        </ui-grid-paging>
        <!-- 결과목록 영역 시작 -->
    </div>
</div>

<script>
vues.list = new Vue({
    el: '#list',
    data: {
        gridRequest: GridUtil.getRequestWithPaging({}),
        gridResult: {}
    },
    computed: {
        service: function() {
            return new KeyManageViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    mounted: function() {
        this.service.readList();
    },
    methods: {
        // 검토(승인/반려) 화면
        viewExamination: function(svcKeyId, mode) {
            CommonUtil.setViewMode(vues, "edit", { examinationMode: mode });

            vues.edit.service.read(svcKeyId);
        },
        // 상세 화면
        viewDetail: function(svcKeyId) {
            CommonUtil.setViewMode(vues, "read");

            vues.read.service.read(svcKeyId);
        }
    }
});
</script>
