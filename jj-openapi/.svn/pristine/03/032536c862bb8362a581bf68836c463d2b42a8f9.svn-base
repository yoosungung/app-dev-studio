package kr.ac.jj.openapi.application.openapi.apitabserviceguide.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import kr.ac.jj.openapi.application.openapi.apitabserviceguide.model.ApiTabServiceGuideModel;
import kr.ac.jj.openapi.application.openapi.apitabserviceguide.service.ApiTabServiceGuideServiceImpl;

/**
 * 서비스 이용안내 RestController
 */
@RestController
@RequestMapping(path = "/openapi/apitabserviceguide/ApiTabServiceGuide", consumes = {
        MediaType.APPLICATION_JSON_VALUE })
public class ApiTabServiceGuideRestController {

    private @Autowired ApiTabServiceGuideServiceImpl apiTabServiceGuideService;

    /**
     * 조회
     *
     * @return
     */
    @GetMapping(path = "/read.do")
    public ApiTabServiceGuideModel get() {
        return apiTabServiceGuideService.read();
    }

    /**
     * 수정
     *
     * @param model
     */
    @PutMapping(path = "/update")
    public void put(@RequestBody ApiTabServiceGuideModel model) {
        apiTabServiceGuideService.update(model);
    }

}
