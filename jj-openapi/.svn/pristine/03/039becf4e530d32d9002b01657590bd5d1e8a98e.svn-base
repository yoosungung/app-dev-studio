server:
  port: 8082
  servlet:
    context-path: /jj-openapi
  tomcat:
    uri-encoding: UTF-8

spring:
  profiles:
    active:
    - default
  messages:
    cache-duration: -1
  http:
    encoding:
      charset: UTF-8
  freemarker:
    enabled: false
    template-loader-path:
    - classpath:/configuration/template/freemarker

logging:
  level: # trace < debug < info < warn < error < fatal < off
    root: error
    java.sql: info
    jdbc: warn
    jdbc.sqlonly: error
    jdbc.sqltiming: info
    jdbc.audit: warn
    jdbc.resultset: warn
    jdbc.resultsettable: warn
    jdbc.connection: warn
    sun.rmi: info
    org.apache: info
    org.springframework: info
    kr.ac.jj: debug
    kr.ac.jj.shared.infrastructure.framework.core.support.message: warn

config:
  shared:
    datasources:
      main:
        hikari:
          driver-class-name: "org.mariadb.jdbc.Driver"
          jdbc-url: "jdbc:mariadb://127.0.0.1:3306/jj_openapi"
          username: "jj_openapi"
          password: "jj_openapi"
          minimum-idle: 2
          maximum-pool-size: 10
          idle-timeout: 60000
          connection-timeout: 30000
          connection-test-query: "SELECT 1"
        mybatis:
          mapper-locations:
          - classpath:/configuration/mapper/shared/main-mariadb/**/*.xml
          - classpath:/configuration/mapper/openapi/main-mariadb/**/*.xml
        transaction:
          isolation-level: isolation-read-uncommitted
          read-only-method-names:
          - view*
          - read*
          - get*
      dw:
        hikari:
          driver-class-name: "org.mariadb.jdbc.Driver"
          jdbc-url: "jdbc:mariadb://202.31.236.115:3306/dw_jj"
          username: "big_service"
          password: "big_service"
          minimum-idle: 2
          maximum-pool-size: 10
          idle-timeout: 60000
          connection-timeout: 30000
          connection-test-query: "SELECT 1"
        mybatis:
          mapper-locations:
          - classpath:/configuration/mapper/shared/main-mariadb/**/*.xml
          - classpath:/configuration/mapper/openapi/main-mariadb/**/*.xml
    default-locale: ko_KR
    message:
      invalid-text:
        prefix:
        suffix:
    error:
      page: openapi/common/error/CommonError
    log:
      enable: true
      action:
        enable: false
      query:
        enable: false
      error:
        enable: true
      login:
        enable: true
      menu:
        enable: true
    file:
      repository:
        create-if-not-exists: true
        repositories:
          repository1: data/files
    login:
      admin:
        enable: true
        ip-list:
        - "*"
        key: 1
        password: "d127qlH70Io12b88Mue|q35E1237904Hq4t21ogy8Hu?9PbX37"
      sso:
        enable: false
      fail:
        avail-count: 5
      default-author-code: ROLE_USER
    scheduler:
      enable: false
      job-interceptor: kr.ac.jj.shared.infrastructure.scheduler.interceptor.SchedulerJobInterceptor
      job-details:
        "common-EmailSendSchedulerJob":
          name: "이메일 발송"
          job-class: kr.ac.jj.shared.application.common.email.scheduler.EmailSendSchedulerJob
          holding-job-continuously-execute: false
          cron-expression-list: # [초] [분] [시] [일] [월] [요일] [연도]
          - "0/10 * * * * ?"
          start-delay: 30000
          profiles: [env-real]
        "appmanage-PersonManageSchedulerJob":
          name: "사람 정보 DW 인터페이스 가져오기"
          job-class: kr.ac.jj.shared.application.admin.appmanage.personmanage.scheduler.PersonManageSchedulerJob
          holding-job-continuously-execute: false
          cron-expression-list: # [초] [분] [시] [일] [월] [요일] [연도]
          - "0 0 2 * * ?"
          start-delay: 30000
          profiles: [env-real]
  openapi:
