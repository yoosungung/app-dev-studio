<%@ page contentType="text/html; charset=utf-8" pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/layouts/shared/include/PageHeader.jspf" %>

<div id="list">
    <div class="pageHeader">
        서비스 현황
    </div>

    <div class="pageContents">
        <!-- 검색조건 영역 시작 -->
        <div class="searchArea">
            <table class="searchBox" v-on:keyup.enter="service.readList(true);">
                <colgroup>
                    <col width="12%">
                    <col width="35%">
                    <col width="15%">
                    <col width="32%">
                    <col width="7%">
                </colgroup>
                <tr>
                    <th>서비스명</th>
                    <td>
                        <ui-input type="text" v-model="gridRequest.search.searchText"></ui-input>
                    </td>
                    <th>URL</th>
                    <td>
                        <ui-input type="text" v-model="gridRequest.search.searchText"></ui-input>
                    </td>
                </tr>
                <tr>
                    <th>유효기간</th>
                    <td>
                        <ui-date></ui-date> ~
                        <ui-date></ui-date>
                    </td>
                    <th>공개기간</th>
                    <td>
                        <ui-date></ui-date> ~
                        <ui-date></ui-date>
                    </td>
                    <td>
                        <div class="btnArea_center">
                            <ui-button class="btn_total_search" v-on:click="service.readList(true);">조회</ui-button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <!-- 검색조건 영역 끝 -->

        <!-- 결과목록 영역 시작 -->
        <ui-grid-paging v-bind:request="gridRequest" v-bind:result="gridResult" v-bind:read-list="service.readList">
            <table class="bbs_list">
                <thead>
                    <tr>
                        <th width="" column-name="svcNm" column-sort>서비스명</th>
                        <th width="" column-name="url" column-sort>URL</th>
                        <th width="" column-name="validPdBegin" column-sort>유효기간</th>
                        <th width="" column-name="othbcPdBegin" column-sort>공개기간</th>
                    </tr>
                </thead>
                <tbody v-cloak>
                    <tr v-for="row in gridResult.list" v-bind:key="row.svcId">
                        </td>
                        <td class="tac"><a href="javascript:void(0);" v-on:click="viewDetail(row.svcId);">{{ row.svcNm }}</a></td>
                        <td class="tac">{{ row.url }}</td>
                        <td class="tac">{{ formatter.date(row.validPdBegin) }}<br>{{ formatter.date(row.validPdEnd) }}</td>
                        <td class="tac">{{ formatter.date(row.othbcPdBegin) }}<br>{{ formatter.date(row.othbcPdEnd) }}</td>
                    </tr>
                </tbody>
            </table>
        </ui-grid-paging>
        <!-- 결과목록 영역 시작 -->
    </div>
</div>

<script>
vues.list = new Vue({
    el: '#list',
    data: {
        gridRequest: GridUtil.getRequestWithPaging({}),
        gridResult: {}
    },
    computed: {
        service: function() {
            return new ServiceManageViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    mounted: function() {
        this.service.readList();
    },
    methods: {
        // 생성 화면
        viewCreate: function() {
            CommonUtil.setViewMode(vues, "edit");

            vues.edit.service.read();
        },
        // 상세 화면
        viewDetail: function(svcId) {
            CommonUtil.setViewMode(vues, "read");

            vues.read.service.read(svcId);
        }
    }
});
</script>
