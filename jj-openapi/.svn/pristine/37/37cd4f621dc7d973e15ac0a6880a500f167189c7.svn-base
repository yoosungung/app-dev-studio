server:
  port: 8082
  servlet:
    context-path: /jj-openapi
  tomcat:
    uri-encoding: UTF-8

spring:
  messages:
    cache-duration: -1
  http:
    encoding:
      charset: UTF-8

logging:
  level: # trace < debug < info < warn < error < fatal < off
    root: error
    java.sql: info
    jdbc: warn
    jdbc.sqlonly: error
    jdbc.sqltiming: info
    jdbc.audit: warn
    jdbc.resultset: warn
    jdbc.resultsettable: warn
    jdbc.connection: warn
    sun.rmi: info
    org.apache: info
    org.springframework: info
    kr.ac.jj: debug
    kr.ac.jj.shared.infrastructure.framework.core.support.message: warn

config:
  shared:
    datasources:
      main:
        hikari:
          driver-class-name: "org.mariadb.jdbc.Driver"
          jdbc-url: "jdbc:mariadb://127.0.0.1:3306/jj_openapi"
          username: "jj_openapi"
          password: "jj_openapi"
          minimum-idle: 2
          maximum-pool-size: 10
          idle-timeout: 60000
          connection-timeout: 30000
          connection-test-query: "SELECT 1"
        mybatis:
          mapper-locations:
            - classpath:/configuration/mapper/shared/main-mariadb/**/*.xml
            - classpath:/configuration/mapper/openapi/main-mariadb/**/*.xml
          transaction:
            isolation-level: isolation-read-uncommitted
            read-only-method-names:
              - view*
              - read*
              - get*
    default-locale: ko_KR
    message:
      invalid-text:
        prefix:
        suffix:
    error:
      page: openapi/common/error/CommonError
    log:
      enable: false
      query:
        enable: false
      error:
        enable: true
        server-code: A
      login:
        enable: true
      menu:
        enable: false
    file:
      repository:
        create-if-not-exists: true
        repositories:
          repository1: data/files
    login:
