<%@ page contentType="text/html; charset=utf-8" pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/layouts/shared/include/PageHeader.jspf" %>

<div class="pageHeader">
    배너 관리
</div>

<div class="pageContents">
    <div id="edit">
        <h3>배너 추가</h3>
        <table class="form">
            <colgroup>
                <col width="100px">
                <col width="">
                <col width="100px">
                <col width="">
            </colgroup>
            <tbody>
                <tr>
                    <th>배너 제목</th>
                    <td>
                        <ui-input type="text" v-model="model.tbApiBanner.bannerSj" auto-focus></ui-input>
                        <ui-valid-checker v-bind:value="model.tbApiBanner.bannerSj" check="required"></ui-valid-checker>
                    </td>
                    <th>첨부파일</th>
                    <td>
                        <ui-input type="text" v-model="model.tbApiBanner.atchFileId" auto-focus></ui-input>
                        <ui-valid-checker v-bind:value="model.tbApiBanner.atchFileId" check="required"></ui-valid-checker>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="page-space tar">
            <ui-button class="page" v-on:click="service['create']();">저장</ui-button>
        </div>
    </div>

    <div id="list">
        <h3>배너 목록</h3>
        <ui-grid-paging v-bind:request="gridRequest" v-bind:result="gridResult" v-bind:read-list="service.readList">
            <table class="list">
                <thead>
                    <tr>
                        <th width="40px">
                            <ui-checkbox-head v-bind:data="gridResult.list"></ui-checkbox-head>
                        </th>
                        <th width="">배너제목</th>
                        <th width="">첨부파일</th>
                        <th width="80px">사용여부</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="row in gridResult.list" v-bind:key="row.bannerId">
                        <td class="tac">
                            <ui-checkbox-row v-bind:data="row">
                        </ui-checkbox-row></td>
                        <td class="tac">{{ row.bannerSj }}</td>
                        <td class="tac">{{ row.atchFileId }}</td>
                        <td class="tac" v-if="row.bannerSttus == 1">사용</td>
                        <td class="tac" v-if="row.bannerSttus == 0">미사용</td>
                    </tr>

                </tbody>
            </table>
            <div class="page-space tar">
                <ui-button class="page" v-on:click="service['delete']();">삭제</ui-button>
            </div>
        </ui-grid-paging>
    </div>
</div>

<script>
vues.list = new Vue({
    el: '#list',
    data: {
        gridRequest: GridUtil.getRequestWithPaging({}),
        gridResult: {}
    },
    computed: {
        service: function() {
            return new BannerManageViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    mounted: function() {
        this.service.readList();
    },
    methods: {

    }
});

vues.edit = new Vue({
    el: '#edit',
    data: {
        model : {
            tbApiBanner : {}
        }
    },
    computed: {
        service: function() {
            return new BannerManageViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    methods: {

    }
});
</script>
