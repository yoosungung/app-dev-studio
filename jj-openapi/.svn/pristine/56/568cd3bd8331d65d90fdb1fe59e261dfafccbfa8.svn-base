<%@ page contentType="text/html; charset=utf-8" pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/layouts/shared/include/PageHeader.jspf" %>

<div id="banner">
    <div class="pageHeader">
        배너 관리
    </div>

    <div class="pageContents">
        <h3>배너 추가</h3>
        <table class="form">
            <colgroup>
                <col width="120px">
                <col width="">
                <col width="120px">
                <col width="">
            </colgroup>
            <tbody>
                <tr>
                    <th>배너 제목</th>
                    <td>
                    </td>
                    <th>설명</th>
                    <td>
                    </td>
                </tr>
                <tr>
                    <th>첨부파일</th>
                    <td colspan="3">
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="table full">
            <h3>배너값 목록</h3>
            <div class="tar">
                <ui-list-button-append v-bind:data="model.tbSysCodeValueList"
                    v-bind:new-row-data="{ useYn: true }"
                    id-column-name="codeValueId"
                    sort-column-name="sortOrdr"
                ></ui-list-button-append>
                <ui-list-button-delete v-bind:data="model.tbSysCodeValueList"
                    sort-column-name="sortOrdr"
                ></ui-list-button-delete>
            </div>
        </div>
        <table class="list">
            <thead>
                <tr>
                    <th width="40px">
                        <ui-checkbox-head v-bind:data="model.tbSysCodeValueList"></ui-checkbox-head>
                    </th>
                    <th width="">배너제목</th>
                    <th width="">설명</th>
                    <th width="80px">사용여부</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>

        <div class="page-space tar">
            <ui-button class="page" v-on:click="service['update']();">저장</ui-button>
            <ui-button class="page" v-on:click="service['delete']();">삭제</ui-button>
        </div>
    </div>
</div>

<script>
vues.edit = new Vue({
    el: '#banner',
    data: {
        bannerId: null,
        model: {
            tbSysBanner: {},
            tbSysBannerList: []
        }
    },
    computed: {
        service: function() {
            return new BannerManageViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    methods: {

    }
});
</script>
