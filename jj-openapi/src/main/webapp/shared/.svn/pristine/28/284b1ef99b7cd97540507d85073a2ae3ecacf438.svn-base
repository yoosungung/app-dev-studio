/* 메인화면 css */

/* 메인네비게이션 */
.main_nav { width:1294px; height:364px; background-color:#efefef; position:relative;  text-align:center; border-bottom:solid 1px #e4e4e4; margin:0 auto;}
.main_outline { 
	width:269px; height:364px; position:absolute; left:1025px; top:0; z-index:20000; 
	background:transparent url(images/mainnav/img_main_outline.png) no-repeat;
	}
    #slides { display: none; position:relative; z-index:10000; }
	#slides div { display:inline-block; margin:0 auto; }
	#slides .slidesjs-control, #slides .slidesjs-container { width:1294px!important; height:364px!important; text-align:center; }
    #slides .slidesjs-navigation {  position:relative; }

    a.slidesjs-next, a.slidesjs-previous {
      background-image: url(images/mainnav/btns-next-prev.png);
      background-repeat: no-repeat; display:block;
      width:23px; height:40px; overflow: hidden; text-indent: -9999px; float: left; 
    }
    a.slidesjs-play, a.slidesjs-stop { display:none; display:block; width:1px;  text-indent:-9999px;  position:absolute; top:-10px; left:-10px;}

    a.slidesjs-next { margin-right:10px; background-position: -23px 0; }

    a:hover.slidesjs-next { background-position: -23px -40px; }
    a.slidesjs-previous { background-position: 0 0; }
    a:hover.slidesjs-previous { background-position: 0 -40px; }
	
    #slides .slidesjs-previous { position:absolute; top:150px; left:50px; z-index:30000; }
    #slides .slidesjs-next { position:absolute; top:150px; right:50px; z-index:30000; }
    .slidesjs-pagination {display:block;list-style: none;   z-index:400; position:absolute; left:47%; bottom:10%;}
    .slidesjs-pagination li { float: left; margin: 0 8px; }
    .slidesjs-pagination li a { 
      	display: block; width: 15px; height: 0; padding-top: 15px; background-image: url(images/mainnav/page_circle.png); background-position: 0 0; float: left; overflow: hidden; 
    	}
    .slidesjs-pagination li a.active, 
    .slidesjs-pagination li a:hover.active { background-position: 0 -15px } 
    .slidesjs-pagination li a:hover { background-position: 0 -30px }

/* 메인컨텐츠 */
.main_content { width:1294px; min-height:400px; position:relative; margin:0 auto; }

/* 인트로 */
.main_intro { 
	display:inline-block; width:168px; height:190px; box-sizing:border-box; position:absolute; top:40px; left:48px; 
	font-size:0.95em; line-height:1.7; color:#545454; padding-top:126px; background:url(images/bg_intro.png) no-repeat top left;
	}

/* 메인링크배너 */
.main_banner { 
	display:inline-block; width:984px; height:154px; border:solid 1px #ddd; box-sizing:border-box; position:absolute; top:40px; left:266px; 
	background:url(images/bg_mainbanner.png) no-repeat; padding:25px 39px;
	}
.main_banner li { display:inline-block; float:left; padding-right:55px; }
.main_banner li:last-child { padding-right:0; }
.main_banner li div { height:104px; padding-left:110px; }
.main_banner li p { 
	display:inline-block; height:21px; padding-right:28px; font-weight:600; color:#333; font-size:20px; line-height:1.0; letter-spacing:-0.5px;
	background:url(images/btn_linkbanner_arrow.png) no-repeat right top; padding-right:30px; margin:14px 0 10px 0;
	}
.main_banner .link_banner_text { display:block; width:100%; color:#666; line-height:1.5; font-size:1em;  }
.main_banner .link_banner01 { background:url(images/icon_linkbanner01.png) no-repeat left top; }
.main_banner .link_banner02 { background:url(images/icon_linkbanner02.png) no-repeat left top; }

/* 메인게시판 */
.main_info { display:inline-block; width:984px; height:175px; box-sizing:border-box; position:absolute; top:225px; left:266px;  }
.main_info li { display:inline-block; float:left; padding-right:40px; }
.main_info li:last-child { padding-right:0; }
.main_info li div { line-height:1.0; display:inline-block; width:300px; }
.main_info .main_info_top { width:100%; height:35px; line-height:1.0; position:relative; }
.main_info .main_info_top p { font-weight:600; color:#333; font-size:1.45em; }
.main_info .main_info_top .btn_more { display:inline-block; width:16px; height:16px; background:#7c7c7c url(images/btn_more.png) no-repeat center; text-indent:-9999px; position:absolute; top:3px; right:0; }
.main_list { width:100%; border-style:hidden; border-collapse:collapse; border:0; table-layout:fixed  }
.main_list th, .main_list td { padding-bottom:10px; }
.main_list th { text-align:left; font-weight:normal; }
.main_list td { text-align:right; color:#999; font-size:12px; }
.main_list .main_list_title { 
	display:inline-block; width:100%; height:16px; font-size:14px; line-height:1.3; background:url(images/icon_dot.png) no-repeat left center; 
	text-overflow:ellipsis; overflow:hidden; word-break:break-all; max-width:100%; padding-left:8px;
	}