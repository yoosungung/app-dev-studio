@charset "utf-8";

#wrap {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    overflow: hidden;
}

#header {
    width: 100%;
    height: 97px;
    margin: 0 auto;
    box-sizing: border-box;
    background: #0078a8 url(images/bg_top.png) repeat-x;
    color: #fff;
    position: fixed;
    top: 0;
    left: 0;
}

#container {
    width: 100%;
    height: 100%;
    padding-top: 97px;
    box-sizing: border-box;
}

/* top */
#header h1 a {
    display: inline-block;
    width: 280px;
    height: 59px;
    cursor: pointer;
    position: absolute;
    top: 15px;
    left: 10px;
    font-size: 20px;
    color: #ffffff;
    white-space: nowrap;
}

#header .gnb_info {
    display: inline-block;
    position: absolute;
    top: 0;
    right: 0;
    font-family: dotum, Arial, Helvetica, sans-serif;
    font-size: 11px;
    color: #fff;
    line-height: 1.0;
}

#header .gnb_info dd {
    display: inline-block;
    float: left;
    margin-right: 20px;
    position: relative;
    top: 21px;
}

#header .gnb_info dd a {
    color: #c4ecfe;
    font-size: 11px;
    font-family: dotum, Arial, Helvetica, sans-serif;
}

#header .gnb_info .btn_toplink {
    display: inline-block;
    height: 14px;
    background: url(images/btn_top_arrow.png) no-repeat right center;
    box-sizing: border-box;
    padding-right: 17px;
    padding-top: 2px;
}

#header .gnb_info .btn_logout {
    display: inline-block;
    width: 16px;
    height: 16px;
    border: 0;
    text-indent: -9999px;
    margin-left: 5px;
    background: url(images/btn_logout.png) no-repeat;
    position: relative;
    top: -1px;
    cursor: pointer;
}

#header .gnb_info .userinfo {
    display: inline-block;
    height: 12px;
    float: left;
    box-sizing: border-box;
    padding-top: 2px;
    font-weight: bold;
    font-size: 11px;
    color: #fff;
}

/* top navigation */
#gnb_nav {
    display: inline-block;
    position: absolute;
    top: 59px;
    left: 0;
}

#gnb_nav li {
    display: inline-block;
    float: left;
    background: url(images/bg_menu_bar.png) no-repeat right;
}

#gnb_nav li:first-child {
    margin-left: 7px;
    border-left: solid 1px #656565;
}

#gnb_nav .gnb_nav_menu {
    display: inline-block;
    width: 168px;
    height: 38px;
    text-align: center;
    box-sizing: border-box;
    line-height: 1.0;
    font-weight: 600;
    font-size: 13px;
    color: #fff;
    padding-top: 11px;
}

#gnb_nav li.on .gnb_nav_menu {
    background: url(images/bg_menu_ov.png) repeat-x;
}

.icon_userguid {
    display: inline-block;
    width: 73px;
    height: 26px;
    background: url(images/icon_userguide.png) no-repeat;
    position: absolute;
    top: -10px;
    right: -10px;
    text-indent: -9999px;
}

/* left navigation */
.pageLeft {
    display: inline-block;
    width: 183px;
    height: 100%;
    float: left;
    background: url(images/bg_leftmenu.png) no-repeat;
}

.pageLeft_nav {
    padding: 6px 13px 0 13px;
}

.pageLeft_nav li {
    display: inline-block;
    width: 100%;
    border-bottom: solid 1px #e6e6e6;
    border-top: solid 1px #fff;
}

.pageLeft_nav li:first-child {
    border-top: 0;
}

.pageLeft_nav li.on {
    border: solid 1px #888c9a;
}

.gnb_left_menu {
    display: table-cell;
    width: 157px;
    height: 48px;
    vertical-align: middle;
    box-sizing: border-box;
    padding: 0 23px 0 12px;
    font-size: 12px;
    font-weight: 600;
    color: #5e5e5f;
    letter-spacing: -0.5px;
    background: url(images/bg_leftmenu_arrow.png) no-repeat center right;
}

.gnb_left_menu:hover {
    color: #0078a8;
}

/*  */
.pageCon {
    padding: 33px 37px 30px 37px;
    height: 100%;
    overflow-y: auto;
    bottom: 0;
    box-sizing: border-box;
    font-size: 13px;
    line-height: 1.3;
}

.pageHeader {
    height: 28px;
    position: relative;
    border-bottom: solid 2px #2e3032;
    margin-bottom: 30px;
    color: #333;
    font-size: 22px;
    font-weight: 600;
    letter-spacing: -0.5px;
    line-height: 1.0;
}

.pageHeader .btn_area {
    display: inline-block;
    float: right;
    text-align: left;
    position: relative;
    top: -4px;
}

.pageContents {
    font-family: "Nanum Gothic", Arial, Helvetica, sans-serif;
    line-height: 1.5;
    font-size: 13px;
}

/* 버튼 */
button {
    display: inline-block;
    letter-spacing: -0.5px;
    line-height: 1.0;
    white-space: nowrap;
    font-family: Nanum Gothic, Arial, Helvetica, sans-serif;
    cursor: pointer;
    font-weight: 600;
    border: 0;
    border-radius: 3px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-shadow: 0 0 1px #333;
    background-color: #fff;
    border: solid 1px #999;
    color: #333;
    font-size: 14px;
    padding: 0 16px 2px 16px;
    height: 28px;
}

button:hover {
    border-color: #333;
}

.btn_write {
    padding-left: 30px;
    background: url(images/bg_btn_submit.png) no-repeat 8px center;
}

.btn_excel {
    padding-left: 30px;
    background: url(images/bg_btn_excel.png) no-repeat 8px center;
}

.btn_total_search {
    background: #024a90 url("images/bg_btn_search02.png") no-repeat 10px
        center !important;
    padding-left: 30px;
    color: #fff;
    border-color: #024a90;
}

/* 검색 */
.searchArea {
    margin-bottom: 25px;
    border: solid 1px #d4d4d4;
    background: #f4f4f4;
    padding: 10px;
}

.searchBox {
    width: 100%;
    border-style: hidden;
    border-collapse: collapse;
    border: 0;
}

.searchBox tbody>tr>th {
    padding: 8px 0 0 23px;
    font-weight: 600;
    font-size: 14px;
    height: 22px;
    background: url("images/bg_search_section.png") no-repeat 16px 11px;
    vertical-align: top;
}

.searchBox tbody>tr>th:first-child {
    padding: 8px 0 0 18px;
    font-weight: 600;
    font-size: 14px;
    height: 22px;
    background: url("images/bg_search_section.png") no-repeat 10px 11px;
}

.searchBox tbody>tr>td {
    padding: 3px;
    font-size: 14px;
    text-align: center;
}

.searchBox tbody>tr>th, .searchBox tbody>tr>td {
    text-align: left;
    letter-spacing: -0.5px;
    line-height: 1.0;
}

.searchBox tbody>tr>th .tx_orange {
    margin-left: 2px;
}

.searchBox_bottom {
    height: 29px;
    padding-top: 4px;
    position: relative;
    top: -25px;
}

.searchBox_bottom p {
    display: inline-block;
    position: absolute;
    top: 8px;
    left: 0;
    font-size: 12px;
    color: #666;
    letter-spacing: -0.5px;
}

.searchBox_bottom .btnArea {
    position: absolute;
    top: 4px;
    right: 0;
}

/* 게시판 */
.bbs_top {
    display: block;
    width: 100%;
    height: 32px;
    position: relative;
}

.bbs_total {
    display: inline-block;
    position: relative;
    top: 3px;
    font-size: 15px;
    font-weight: 600;
}

.bbs_top_info {
    display: inline-block;
    float: right;
}

.bbs_top_info li {
    display: inline-block;
    float: left;
    margin-right: 3px;
}

.bbs_top_info li:last-child {
    margin-right: 0;
}

.bbs_search li {
    margin-right: 3px;
}

/* 게시판리스트 */
.bbs_list {
    width: 100%;
    border-style: hidden;
    border-collapse: collapse;
    border: 0;
    table-layout: fixed
}

.bbs_list th, .bbs_list td {
    text-align: center;
    font-size: 14px;
    color: #545454;
}

.bbs_list thead th {
    height: 40px;
    border-top: solid 1px #666;
    border-bottom: solid 1px #ccc;
    background: #f5f5f5;
    font-size: 14px;
    font-weight: 600;
    color: #333;
}

.bbs_list tbody td {
    height: 35px;
    border-bottom: solid 1px #ddd;
    padding: 3px 5px;
}

.list_title {
    display: inline-block;
    height: 17px;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    max-width: 95%;
    text-align: left;
    font-size: 14px;
    line-height: 1.3;
    float: left;
}

.btn_sort_basic, .btn_sort_up, .btn_sort_down {
    display: inline-block;
    width: 15px;
    height: 21px;
    text-indent: -9999px;
}

.btn_sort_basic {
    background: url(images/btn_sort_basic.png) no-repeat center;
}

.btn_sort_up {
    background: url(images/btn_sort_up.png) no-repeat center;
}

.btn_sort_down {
    background: url(images/btn_sort_down.png) no-repeat center;
}

/* 리스트 페이지 컨트롤 */
#pageControlArea {
    margin: 30px 0 50px 0;
    text-align: center;
}

#pageControlArea button {
    vertical-align: top;
    color: #333;
    font-family: 돋움, dotum, Arial, Helvetica, sans-serif;
    font-size: 12px;
    border-radius: 1px;
    -webkit-border-radius: 1px;
    -moz-border-radius: 1px;
    -webkit-border-shadow: 0 0 1px #333;
}

#pageControlArea .pageControl {
    display: inline;
    min-width: 33px;
    min-height: 32px;
    padding: 0 10px;
    background-color: #fff;
    border: solid 1px #ccc;
    cursor: pointer;
}

#pageControlArea .pagePrev1 {
    text-indent: -9999px;
    background: #fff url("images/page_left1.png") no-repeat 10px 10px
        !important;
}

#pageControlArea .pagePrev2 {
    text-indent: -9999px;
    background: #fff url("images/page_left2.png") no-repeat 10px 10px;
}

#pageControlArea .pageNext1 {
    text-indent: -9999px;
    background: #fff url("images/page_right1.png") no-repeat 11px 10px;
}

#pageControlArea .pageNext2 {
    text-indent: -9999px;
    background: #fff url("images/page_right2.png") no-repeat 11px 10px;
}

#pageControlArea .pagePrev1:hover, #pageControlArea .pagePrev2:hover,
    #pageControlArea .pageNext1:hover, #pageControlArea .pageNext2:hover {
    background-color: transparent !important;
    border-color: #808080 !important;
}

.pageNum:hover, .pageNum:focus, .pageNum:visited, .pageNum.active,
    .pageNum.disabled, .pageNum[disabled] {
    border-color: #393939 !important;
    background-color: #555 !important;
    color: #fff !important;
}

#pageControlArea .on {
    border-color: #393939;
    background-color: #555;
    color: #fff;
    font-weight: bold;
}
