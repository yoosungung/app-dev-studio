@charset "utf-8";

/* font css : 나눔고딕 */

@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('fonts/NanumGothic-Regular.eot');
  src: url('fonts/NanumGothic-Regular.eot?#iefix') format('embedded-opentype'),
       url('fonts/NanumGothic-Regular.woff2') format('woff2'),
       url('fonts/NanumGothic-Regular.woff') format('woff'),
       url('fonts/NanumGothic-Regular.ttf') format('truetype');
}
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 600;
  src: url('fonts/NanumGothic-Bold.eot');
  src: url('fonts/NanumGothic-Bold.eot?#iefix') format('embedded-opentype'),
       url('fonts/NanumGothic-Bold.woff2') format('woff2'),
       url('fonts/NanumGothic-Bold.woff') format('woff'),
       url('fonts/NanumGothic-Bold.ttf') format('truetype');
}
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 800;
  src: url('fonts/NanumGothic-ExtraBold.eot');
  src: url('fonts/NanumGothic-ExtraBold.eot?#iefix') format('embedded-opentype'),
       url('fonts/NanumGothic-ExtraBold.woff2') format('woff2'),
       url('fonts/NanumGothic-ExtraBold.woff') format('woff'),
       url('fonts/NanumGothic-ExtraBold.ttf') format('truetype');
}


/* 기본 css */
*       {padding:0;margin:0}
html    { height:100%; margin:0; padding:0; }
body    { height:100%; font-family: "Nanum Gothic", Arial, Helvetica, sans-serif; font-size: 13px; line-height:1.3; color: #333; }
body.con    { height:100%; font-family: "Nanum Gothic", Arial, Helvetica, sans-serif; font-size: 13px; line-height:1.3; color: #333; background:none !important; }

table.basic { width:100%; border-style:hidden; border-collapse:collapse; border:0; table-layout:fixed }

img { border:0 }
A:link, A:visited, A:active {COLOR:#333; font-family: "Nanum Gothic", Arial, Helvetica, sans-serif; font-size: 13px; TEXT-DECORATION:none }
A:hover { TEXT-DECORATION:none; COLOR:#0076c0;}

input, textarea {
    background-color:#fff;  border:solid 1px #ccc;   COLOR:#333333; font-size:15px;
    font-family: "Nanum Gothic", Arial, Helvetica, sans-serif; line-height:1.0; margin: 0 1px !important;
    display:inline-block;
    }
textarea { overflow-y:auto; padding:3px }
select{ font-size:15px; padding:3px; font-family: "Nanum Gothic", Arial, Helvetica, sans-serif; }
div,dl,dt,dd,p,ul,li{margin:0px; padding:0px;}
ul, dl { list-style:none; }

input:hover, textarea:hover { border:solid 1px #148eec !important; }
input[type="text"], input[type="password"] { padding:3px; }
input[type="file"] { width:100%; }
input[type=checkbox], input[type=radio] { border:0 !important; position:relative; top:2px; }
.searchArea tbody > tr > td { padding-right: 20px; }
select[disabled], input[disabled], .disabled { background:#e7e7e7; }
select[disabled]:hover, input[disabled]:hover, .disabled:hover { border-color:#ccc }


::-webkit-input-placeholder { color:#666 !important  }
::-moz-placeholder { color:#666 !important; }
:-moz-placeholder { color:#666 !important; }
:-ms-input-placeholder { color:#666 !important; }

/* 빅데이터 분석포털 메인화면 */
.panel-main { width:100%; min-width:100%; content:""; display:table; clear:both;margin-top:1.3%; }
.panel-wrapper { width:50%; height:100%; position:relative; float:left;  }
.panel-height-helper { display:block; height:800px; }
.panel-container {
    width:100%; height:100%; background:#FFF; border:solid 1px #d4d4d4; vertical-align:middle; text-align:center; line-height:center;
    box-shadow:0px 2px 1px #eee; -moz-box-shadow:0px 2px 1px #eee; /* Firefox 3.6 and earlier */
    }
.panel-header {
    width:100%; height:37px; border-bottom:solid 1px #eee; line-height:1.0; position:relative;
    background-color:#f1f9fe;
    }
.panel-header p {
    font-size:1.11em; font-weight:600; color:#333; letter-spacing:-0.5px; padding-top:10px; margin-right:30px; line-height:1.0; float:left;
    display:inline-block; height:37px; padding-left:35px; background:url("images/icon_panel_title.png") no-repeat 5px 0px;
    }
.panel-header ul { display:inline-block; position:relative; top:9px; }
.panel-header li { display:inline-block; float:left; margin-right:15px; }
.panel-header li:last-child { margin-right:0; }
.panel-header li label { display:inline-block; padding-left:2px; }
.panel-content {
    padding:10px 15px;  height:95%; width:auto; position:relative;
    }
