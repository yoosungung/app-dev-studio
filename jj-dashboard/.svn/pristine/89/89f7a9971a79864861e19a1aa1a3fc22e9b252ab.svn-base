<div id="graph" style="display: none;">
    <div class="pageHeader">
        전국 출신 지역분포
        <div class="btn_area">
            <!-- <ui-button class="btn_write" onclick="vues.list.viewCreate();">선도학생 등록</ui-button> -->
        </div>
    </div>
    <div class="pageContents">
        <div id=graphDiv>
            <ui-graph id="spreadGraph">
            </ui-graph>
        </div>
    </div>
</div>

<script>
Vue.component('ui-graph', {
    props: {
        id: {
            type: String
        },
        search: {
            type: Object
        }
    },
    computed: {
        service: function() {
            return new SpreadViewService(this);
        }
    },
    template: ' \
        <div v-bind:id="id" style="width:700px;height:700px;display:inline-block;"></div> \
    ',
    mounted: function() {
        this.drawGraph();
    },
    updated: function() {
        this.drawGraph();
    },
    methods: {
        drawGraph: function() {
            this.service.drawGraph[this.id]();
        }
    }
});

vues.graph = new Vue({
    el: '#graph',
    data: {
    },
    computed: {
        service: function() {
            return new SpreadViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        }
    },
    mounted: function() {
//         this.service.drawGraph();
    },
});
</script>
