<%@ page contentType="text/html; charset=utf-8" pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/layouts/shared/include/PageHeader.jspf" %>

<div id="list" style="display: none;">
    <div class="pageHeader">
        직업추천 - 채용정보
        <div class="btn_area">
        </div>
    </div>
    <div class="pageContents">
        <div class="searchArea">
            <table class="searchBox">
                <colgroup>
                    <col width="10%">
                    <col width="40%">
                    <col width="10%">
                    <col width="40%">
                </colgroup>
                <tr>
                    <th>학과</th>
                    <td><ui-select v-model="gridRequest.search.hakgwaNm" code-data="recommendjob.readHakgwaList" first-name="전체"></ui-select></td>
                    <th></th>
                    <td>
                        <div class="btnArea_center">
                            <ui-button class="btn_total_search" v-on:click="service.readList(true);">조회</ui-button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <ui-grid-paging v-bind:request="gridRequest" v-bind:result="gridResult" v-bind:read-list="service.readList">
        <table class="bbs_list">
            <thead>
                <tr>
                    <th width="*" column-name="jobs_nm">직종</th>
                    <th width="170px" column-name="company">회사명</th>
                    <th width="100px" column-name="minSal">연봉(최소)</th>
                    <!-- <th width="100px" column-name="minEdubg">학력</th> -->
                    <!-- <th width="100px" column-name="career">경력</th> -->
                    <!-- <th width="100px" column-name="regDt">등록일</th> -->
                    <!-- <th width="150px" column-name="closeDt">마감일</th> -->
                    <th width="*" column-name="basicAddr">주소</th>
                </tr>
            </thead>
            <tbody v-cloak>
                <tr v-for="row in gridResult.list" v-bind:key="row.code_seq">
                    <td class="tac">{{ row.jobs_nm }}</td>
                    <td class="tac">{{ row.company }}</td>
                    <td class="tar sal">{{ row.minSal }}</td>
                    <!-- <td class="tac">{{ row.minEdubg }}</td> -->
                    <!-- <td class="tac">{{ row.career}}</td> -->
                    <!-- <td class="tac">{{ row.regDt }}</td> -->
                    <!-- <td class="tac">{{ row.closeDt }}</td> -->
                    <td class="tac">{{ row.basicAddr }}</td>
                </tr>
            </tbody>
        </table>
        </ui-grid-paging>
    </div>
</div>

<script type="text/javascript">
vues.list = new Vue({
    el : '#list',
    data : {
        gridRequest: GridUtil.getRequestWithPaging({}, {datediff: "DESC"}),
        gridResult: {},
    },
    computed : {
        service : function() {
            return new RecommendJobViewService(this);
        },
        formatter : function() {
            return CommonUtil.formatter;
        },
    },
    mounted: function() {
        this.service.readList(this.search);
    },
    updated: function() {
        this.comma();
    },
    methods: {
        comma: function() {
            $('.sal').each(function() {
                $(this).html(comma($(this).html()));
            });
        }
    }
});

</script>