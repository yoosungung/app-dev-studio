<script>
vues.read = new Vue({
    el: '#map',
    data: {
        search : {}
    },
    computed: {
        service: function() {
            return new SpreadViewService(this);
        },
        formatter: function() {
            return CommonUtil.formatter;
        },
    },
    mounted: function() {
        this.readList();
    },
    updated: function() {
        this.readList();
    },
    methods: {
        readList: function() {
            this.service.readList(this.search);
        }
    }
});
</script>
