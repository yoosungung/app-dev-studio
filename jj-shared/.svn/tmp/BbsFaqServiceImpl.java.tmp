    public String create(BbsFaqModel model) {

        TbBbsFaq tbbbsfaq = model.getTbBbsFaq().newId();
        //model의BbscttId를 생성해주는 부분

        if(tbbbsfaq!=null) {
            tbbbsfaq.setRdcnt(0);
