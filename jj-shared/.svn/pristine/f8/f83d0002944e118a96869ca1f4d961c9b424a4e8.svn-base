<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
 시스템 - 메뉴별 권한 Mapper
 -->
<mapper namespace="kr.ac.jj.shared.domain.main.mapper.sys.menu.author.TbSysMenuAuthorMapper">

    <!-- 목록 조회 - AUTHOR_ID(으)로2 -->
    <select id="selectListByAuthorId2" resultType="kr.ac.jj.shared.domain.main.model.sys.menu.author.TbSysMenuAuthorToMenu">
        <![CDATA[
            SELECT TSM.MENU_ID
                 , TSM.UPPER_MENU_ID
                 , TSM.MENU_LEVEL
                 , TSM.MENU_NM_TITLE
                 , TSM.MENU_ORDR
                 , (SELECT COUNT(1) FROM TB_SYS_MENU_AUTHOR TSMA WHERE TSMA.AUTHOR_ID = #{authorId} AND TSMA.MENU_ID = TSM.MENU_ID) AS MENU_AUTHOR_CO
                 , TSM.USE_YN
            FROM   TB_SYS_MENU TSM
            WHERE  TSM.MENU_KND = #{menuKnd}
            ORDER BY MENU_LEVEL, MENU_ORDR
        ]]>
    </select>

</mapper>
