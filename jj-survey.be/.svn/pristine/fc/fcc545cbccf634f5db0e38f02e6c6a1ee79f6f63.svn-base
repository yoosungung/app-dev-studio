server:
  port: 8085
  servlet:
    context-path: /jj-survey
  tomcat:
    uri-encoding: UTF-8

spring:
  profiles:
    include:
      - logging-console
  messages:
    cache-duration: -1
  http:
    encoding:
      charset: UTF-8
  mvc:
    view:
      prefix: /WEB-INF/jsp/
      suffix: .jsp

logging:
  level: # trace < debug < info < warn < error < fatal < off
    root: error
    java.sql: info
    jdbc: warn
    jdbc.sqlonly: error
    jdbc.sqltiming: info
    jdbc.audit: warn
    jdbc.resultset: warn
    jdbc.resultsettable: warn
    jdbc.connection: warn
    sun.rmi: info
    org.apache: info
    org.springframework: info
    kr.ac.jj: debug
    kr.ac.jj.survey.infrastructure.framework.core.support.message: warn

config:
  datasources:
    main:
      hikari:
        driver-class-name: "org.mariadb.jdbc.Driver"
        jdbc-url: "jdbc:mariadb://127.0.0.1:3306/jj_survey" 
        username: "jj_survey"
        password: "jj_survey"
        minimum-idle: 20
        maximum-pool-size: 100
        idle-timeout: 60000
        connection-timeout: 30000
        connection-test-query: "SELECT 1"
      mybatis:
        mapper-locations:
          - classpath:/configuration/mapper/main-mariadb/**/*.xml
        transaction:
          isolation-level: isolation-read-uncommitted
          read-only-method-names:
            - view*
            - read*
            - get*
  default-locale: ko_KR
  message:
    invalid-text:
      prefix:
      suffix:
  log:
    enable: false
    query:
      enable: false
    error:
      enable: true
      server-code: A
    login:
      enable: true
    menu:
      enable: false
  file:
    repository:
      create-if-not-exists: true
      repositories:
        repository1: target/files
  login:
    admin:
      enable: true
      ip-list:
        - "*"
      key: 1
      password: "d127qlH70Io12b88Mue|q35E1237904Hq4t21ogy8Hu?9PbX37"
    sso:
      enable: false
    fail:
      avail-count: 5
    default-author-code: ROLE_USER
