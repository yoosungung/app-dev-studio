    <script type="text/javascript">
        <![CDATA[
            var chart = {
                    showBorder : '0',

                    baseFont : 'Nanum Gothic',
                    baseFontSize : '13',

                    bgColor: '#ffffff',
                    paletteColors: '#0075c2,#1aaf5d',
                    borderAlpha: '20',
                    showCanvasBorder: '0',
                    usePlotGradientColor: '0',
                    plotBorderAlpha: '10',

                    showlegend: '0',

                    valueFontColor: '#ffffff',

                    xAxisLineColor: '#999999',

                    showAlternateVGridColor: '0',
                    showYAxisValues: '0',
                    stack100Percent : '1'
            };

            var colors = ['#008ee4','#9b59b6','#6baa01','#e44a00','#f8bd19','#34495e','#1abc9c'];


            $(function() {
                chageTap(1);
             })

            function chageTap(idx) {
                $('.tab7 ul li').each(function(i) {
                    if((i+1) == idx) $(this).addClass("active");
                    else $(this).removeClass("active");
                });

                $('#chartContainer').insertFusionCharts({
                    type : 'stackedbar2d',
                    dataFormat: 'json',
                    width: 600,
                    height: 300,
                    dataSource: getData(idx)
                });
            }

            function getData(order) {
                var dataset = new Array();
                var categories = new Array();
                var category = new Array();
                var data1 = new Array();
                var data2 = new Array();

                $.ajax({
                    type: 'get',
                    async: false,
                    url: '${pageContext.request.contextPath}/pub/survey/status/${surveyDefinition.surveyDefinitionId}/'+order
                }).done(function(data) {

                    var total = 100;

                    $(data).each(function(i) {
                        category.push({label: this.name});
                        data1.push({value: ((total-this.cnt) == 0 ? '': (total-this.cnt)), showValue : 0, color: '#BDBDBD', alpha:70});
                        data2.push({value: this.cnt, color: colors[i]});

                    });

                    categories.push({'category': category});
                    dataset.push({seriesname: '제출', data: data2});
                    dataset.push({seriesname: '미제출', data: data1});
                });
                return {'chart':chart,'categories':categories,'dataset':dataset};
            }

            function surveyPopup(url, name) {

                var top = (screen.height-550)/2;
                var left = (screen.width-1100)/2;

                window.open(url, name,'width=1100, height=550, top='+top+',left='+left);
            }

            function checkSurveyTarget(id) {
                var flag = true;

                $.ajax({
                    type: 'post',
                    async: false,
                    url: '${pageContext.request.contextPath}/pub/survey/'+id,
                }).done(function(data) {
                    if(data == 0) {
                        alert('조사대상자가 아닙니다.');
                        flag = false;
                    }
                });
                return flag;
            }

      ]]>
    </script>

