<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
 설문_그룹_사람 Entity Mapper
 -->
<mapper namespace="kr.ac.jj.survey.domain.main.mapper.survey.group.person.TbSurveyGroupPersonEntityMapper">

    <!-- 조회 -->
    <select id="select" resultType="kr.ac.jj.survey.domain.main.model.survey.group.person.TbSurveyGroupPerson">
        <![CDATA[
            SELECT TSGP.SURVEY_GROUP_PERSON_ID
                 , TSGP.SURVEY_GROUP_ID
            FROM   TB_SURVEY_GROUP_PERSON TSGP
            WHERE  TSGP.SURVEY_GROUP_PERSON_ID = #{surveyGroupPersonId}
        ]]>
    </select>

    <!-- 생성 -->
    <insert id="insert">
        <![CDATA[
            INSERT INTO TB_SURVEY_GROUP_PERSON (
                   SURVEY_GROUP_PERSON_ID
                 , CREAT_USER_ID
                 , CREAT_DT
                 , SURVEY_GROUP_ID
            ) VALUES (
                   #{tbSurveyGroupPerson.surveyGroupPersonId}
                 , #{$var.loginUser.userId}
                 , #{$var.systemDate}
                 , #{tbSurveyGroupPerson.surveyGroupId}
            )
        ]]>
    </insert>

    <!-- 수정 -->
    <update id="update">
        <![CDATA[
            UPDATE TB_SURVEY_GROUP_PERSON SET
                   UPDT_USER_ID                     = #{$var.loginUser.userId}
                 , UPDT_DT                          = #{$var.systemDate}
                 , SURVEY_GROUP_ID                  = #{tbSurveyGroupPerson.surveyGroupId}
            WHERE  SURVEY_GROUP_PERSON_ID = #{tbSurveyGroupPerson.surveyGroupPersonId}
        ]]>
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM   TB_SURVEY_GROUP_PERSON
            WHERE  SURVEY_GROUP_PERSON_ID = #{surveyGroupPersonId}
        ]]>
    </delete>

</mapper>
