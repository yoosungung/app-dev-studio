server:
  port: 8081
  servlet:
    context-path: /jj-survey
    encoding:
      charset: UTF-8
  tomcat:
    uri-encoding: UTF-8

spring:
  profiles:
    active:
    - default
  messages:
    cache-duration: -1
  freemarker:
    enabled: false
    template-loader-path:
    - classpath:/configuration/template/freemarker

logging:
  level: # trace < debug < info < warn < error < fatal < off
    root: error
    java.sql: info
    jdbc: warn
    jdbc.sqlonly: error
    jdbc.sqltiming: info
    jdbc.audit: warn
    jdbc.resultset: warn
    jdbc.resultsettable: warn
    jdbc.connection: warn
    sun.rmi: info
    org.apache: info
    org.springframework: info
    com.jd.survey: debug
    kr.ac.jj: debug
    kr.ac.jj.shared.infrastructure.framework.core.support.message: warn

