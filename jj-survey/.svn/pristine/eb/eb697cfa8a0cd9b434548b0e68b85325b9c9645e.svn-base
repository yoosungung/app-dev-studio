	/*		Default Layout: */ 
	body {
		
		-webkit-text-size-adjust: 100%; /* Stops Mobile Safari from auto-adjusting font-sizes */
	}
	
	.container{
		width:100%;
	}

	/*	Tablet Layout: 768px.*/
	
	@media only screen and (min-width: 768px) and (max-width: 991px) {
		
		body {
			/*background:blue;*/
		}
	}



	/*	Mobile Layout: 320px. */
	@media only screen and (max-width: 767px) {
			.main{
				width:auto;
				
				margin-top:75px;
				margin-left:-7px;
				left:0;
			}
			.form-1{
				width: 280px;	
			}
			.flash{	
				width:97%;
				margin-left:5px;
				left:0;
			}	
	}



