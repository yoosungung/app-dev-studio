                                        </c:choose>

                                        <c:choose>
                                            <c:when test="${question.type eq 'CURRENCY_INPUT_MATRIX'}">
                                                <option value="CRM" selected="selected">통화 입력</option>
                                            </c:when>
                                            <c:otherwise>
                                                <option value="CRM">통화 입력</option>
                                            </c:otherwise>
                                        </c:choose>

                                        <c:choose>
                                            <c:when test="${question.type eq 'DATE_INPUT_MATRIX'}">
                                                <option value="DTM" selected="selected">날짜 입력</option>
                                            </c:when>
                                            <c:otherwise>
                                                <option value="DTM">날짜 입력</option>
                                            </c:otherwise>
                                        </c:choose>

                                        <c:choose>
                                            <c:when test="${question.type eq 'COMPLEX_INPUT_MATRIX'}">
                                                <option value="CPM" selected="selected">복합 입력</option>
                                            </c:when>
                                            <c:otherwise>
                                                <option value="CPM">복합 입력</option>
                                            </c:otherwise>
                                        </c:choose>
                                    </optgroup>

                                    <optgroup label=":: 기타 질문 ::">
                                        <c:choose>
                                            <c:when test="${question.type eq 'FILE_UPLOAD'}">
                                                <option value="FIL" selected="selected">파일 업로드</option>
                                            </c:when>
                                            <c:otherwise>
                                                <option value="FIL">파일 업로드</option>
                                            </c:otherwise>
                                        </c:choose>
                                    </optgroup>
                                </springform:select>
                            </div>
                        </div>
                        <div id="direction_id" class="form-group">
                            <label for="direction" class="col-sm-2 control-label no-padding-right"><i class="fa fa-check red"><!----></i> 출력방향</label>
                            <div class="col-sm-10">
                                <springform:select path="question.direction" disabled="${question.page.surveyDefinition.statusAsString eq 'P' ? 'true' : 'false'}" >
                                    <c:choose>
                                        <c:when test="${question.direction eq 'VERTICAL'}">
                                            <option value="VERTICAL" selected="selected">행 (세로)</option>
                                        </c:when>
                                        <c:otherwise>
                                            <option value="VERTICAL">행 (세로)</option>
                                        </c:otherwise>
                                    </c:choose>
                                    <c:choose>
                                        <c:when test="${question.direction eq 'HORIZONTAL'}">
                                            <option value="HORIZONTAL" selected="selected">열 (가로)</option>
                                        </c:when>
                                        <c:otherwise>
                                            <option value="HORIZONTAL">열 (가로)</option>
                                        </c:otherwise>
                                    </c:choose>
                                </springform:select>
                            </div>
                        </div>
                        <div id="datasets" class="form-group">
                            <label for="dataSetId" class="col-sm-2 control-label no-padding-right"><i class="fa fa-check red"><!----></i> 데이터집합</label>
                            <div class="col-sm-10">
                                <c:choose>
                                    <c:when test="${question.page.surveyDefinition.statusAsString eq 'P'}">
                                        <select name="dataSetId" disabled="disabled">
                                            <option value="">:: 선택 ::</option>
                                            <c:forEach items="${datasets}" var="dataset" varStatus="loop">
                                                <c:choose>
                                                    <c:when test="${question.dataSetId eq dataset.id}">
                                                         <option value="${dataset.id}" selected="selected" ><c:out value="${dataset.name}"/></option>
                                                    </c:when>
                                                    <c:otherwise>
                                                         <option value="${dataset.id}"><c:out value="${dataset.name}"/></option>
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:forEach>
                                        </select>
                                    </c:when>
                                    <c:otherwise>
                                        <select name="dataSetId">
                                            <option value="">:: 선택 ::</option>
                                            <c:forEach items="${datasets}" var="dataset" varStatus="loop">
                                                <c:choose>
                                                    <c:when test="${question.dataSetId eq dataset.id}">
                                                         <option value="${dataset.id}" selected="true" ><c:out value="${dataset.name}"/></option>
                                                    </c:when>
                                                    <c:otherwise>
                                                         <option value="${dataset.id}"><c:out value="${dataset.name}"/></option>
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:forEach>
                                        </select>
                                    </c:otherwise>
                                </c:choose>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="questionText" class="col-sm-2 control-label no-padding-right"><i class="fa fa-check red"><!----></i> 질문</label>
                            <div class="col-sm-10">
                                <textarea id="questionText" name="questionText">${question.questionText}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tip" class="col-sm-2 control-label no-padding-right">팁</label>
                            <div class="col-sm-10">
                                <textarea id="tip" name="tip"><!---->${question.tip}</textarea>
                            </div>
                        </div>

                        <div id="mandatory" class="form-group">
                            <label for="required" class="col-sm-2 control-label no-padding-right">필수여부</label>
                            <div class="col-sm-10">
                                <input type="hidden" name="_required" value="on" />
                                <div class="checkbox">
                                    <label>
                                        <c:choose>
                                            <c:when test="${question.required}">
                                                <input type="checkbox" id="required" name="required" value="true" checked="checked" />
                                            </c:when>
                                            <c:otherwise>
                                                <input type="checkbox" id="required" name="required" value="true" />
                                            </c:otherwise>
                                        </c:choose>
                                        <span class="text">필수</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div id="duplicate_check" class="form-group">
                            <label for="duplicate" class="col-sm-2 control-label no-padding-right">중복검사</label>
                            <div class="col-sm-10">
                                <input type="hidden" name="_duplicate" value="on" />
                                <div class="checkbox">
                                    <label>
                                        <c:choose>
                                            <c:when test="${question.duplicate}">
                                                <input type="checkbox" id="duplicate" name="duplicate" value="true" checked="checked" />
                                            </c:when>
                                            <c:otherwise>
                                                <input type="checkbox" id="duplicate" name="duplicate" value="true" />
                                            </c:otherwise>
                                        </c:choose>
                                        <span class="text">사용</span>
                                    </label>
                                    <span class="text-warning" style="margin-left: 10px;"><i class="fa-fw fa fa-warning"><!----></i> 설문이 비공개일 경우 로그인 계정으로 중복검사를 수행합니다.</span>
                                </div>
                            </div>
                        </div>

                        <div id="allow_other" class="form-group">
                            <label for="allowOtherTextBox" class="col-sm-2 control-label no-padding-right">기타항목 추가</label>
                            <div class="col-sm-10">
                                <input type="hidden" name="_allowOtherTextBox" value="on" />
                                  <div class="checkbox">
                                    <label>
                                        <c:choose>
                                            <c:when test="${question.page.surveyDefinition.statusAsString eq 'P'}">
                                                <c:choose>
                                                    <c:when test="${question.allowOtherTextBox}">
                                                        <input type="checkbox" id="allowOtherTextBox" name="allowOtherTextBox" value="true" checked="checked" disabled="disabled" />
                                                    </c:when>
                                                    <c:otherwise>
                                                        <input type="checkbox" id="allowOtherTextBox" name="allowOtherTextBox" value="true" disabled="disabled" />
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:when>
                                            <c:otherwise>
                                                <c:choose>
                                                    <c:when test="${question.allowOtherTextBox}">
                                                        <input type="checkbox" id="allowOtherTextBox" name="allowOtherTextBox" value="true" checked="checked" />
                                                    </c:when>
                                                    <c:otherwise>
                                                        <input type="checkbox" id="allowOtherTextBox" name="allowOtherTextBox" value="true" />
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:otherwise>
                                        </c:choose>
                                        <span class="text">기타 입력박스 추가</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div id="question_validation">
                            <div class="form-title">유효성 검사</div>

                            <div id="integer_validation" class="form-group">
                                <label for="_integerMinimum_id" class="col-sm-2 control-label no-padding-right">정수범위</label>
                                <div class="col-sm-10 form-inline">
                                    <div class="form-group" style="margin: 0;">
                                        <input type="text" class="form-control" id="_integerMinimum_id" name="integerMinimum" value="${question.integerMinimum}" size="12" placeholder="최소값" />
                                    </div>
                                    ~
                                    <div class="form-group" style="margin: 0;">
                                        <input type="text" class="form-control" id="_integerMaximum_id" name="integerMaximum" value="${question.integerMaximum}" size="12" placeholder="최대값" />
                                    </div>
                                    <span style="margin-left: 10px;" class="text-warning"><i class="fa-fw fa fa-warning"><!----></i> 입력값의 범위를 검증할 수 있습니다.</span>
                                </div>
                            </div>

                            <div id="string_validation" class="form-group">
                                <label for="_regularExpresion_id" class="col-sm-2 control-label no-padding-right">마스크</label>
                                <div class="col-sm-10">
                                    <select id="_regularExpresion_id" name="regularExpression" >
                                        <option value="">:: 선택 ::</option>
                                         <c:forEach items="${regularExpressions}" var="regularExpression" varStatus="loop">
                                             <c:choose>
                                                <c:when test="${question.regularExpression eq  regularExpression.regex}">
                                                     <option value="${regularExpression.regex}" selected="true" ><c:out value="${regularExpression.name}"/></option>
                                                </c:when>
                                                <c:otherwise>
                                                     <option value="${regularExpression.regex}"><c:out value="${regularExpression.name}"/></option>
                                                </c:otherwise>
                                            </c:choose>
                                        </c:forEach>
                                    </select>
                                    <span style="margin-left: 10px;" class="text-warning"><i class="fa-fw fa fa-warning"><!----></i> 입력값의 형식을 검증할 수 있습니다.</span>
                                </div>
                            </div>

                            <div id="decimal_validation" class="form-group">
                                <label for="_decimalMinimum_id" class="col-sm-2 control-label no-padding-right">10진수범위</label>
                                <div class="col-sm-10 form-inline">
                                    <div class="form-group" style="margin: 0;">
                                        <input type="text" class="form-control" id="_decimalMinimum_id" name="decimalMinimum" value="${question.decimalMinimum}" size="12" placeholder="최소값" />
                                    </div>
                                    ~
                                    <div class="form-group" style="margin: 0;">
                                        <input type="text" class="form-control" id="_decimalMaximum_id" name="decimalMaximum" value="${question.decimalMaximum}" size="12" placeholder="최대값" />
                                    </div>
                                    <span style="margin-left: 10px;" class="text-warning"><i class="fa-fw fa fa-warning"><!----></i> 입력값의 범위를 검증할 수 있습니다.</span>
                                </div>
                            </div>

                            <div id="date_validation" class="form-group">
                                <label for="_dateMinimum_id" class="col-sm-2 control-label no-padding-right">날짜범위</label>
                                <div class="col-sm-10 form-inline">
                                    <div class="form-group" style="margin: 0;">
                                        <spring:eval expression="question.dateMinimum" var="dateMinimum" />
                                        <input type="text" class="form-control" id="_dateMinimum_id" name="dateMinimum" value="${dateMinimum}" size="12" placeholder="최소값" />
                                    </div>
                                    ~
                                    <div class="form-group" style="margin: 0;">
                                        <spring:eval expression="question.dateMaximum" var="dateMaximum" />
                                        <input type="text" class="form-control" id="_dateMaximum_id" name="dateMaximum" value="${dateMaximum}" size="12" placeholder="최대값" />
                                    </div>
                                    <span style="margin-left: 10px;" class="text-warning"><i class="fa-fw fa fa-warning"><!----></i> 입력값의 범위를 검증할 수 있습니다.</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-palegreen" name="_proceed" id="_proceed" value="저장">질문 복사</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
