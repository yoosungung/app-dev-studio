                                            </c:when>
                                            <c:otherwise>
                                                <option value="ST">짧은 텍스트 입력</option>
                                            </c:otherwise>
                                        </c:choose>

                                        <c:choose>
                                            <c:when test="${question.type eq 'LONG_TEXT_INPUT'}">
